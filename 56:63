import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();

        int num = n + 1;

        while (true) {
            boolean prime = true;

            // check if num is prime
            for (int i = 2; i <= Math.sqrt(num); i++) {
                if (num % i == 0) {
                    prime = false;
                    break;
                }
            }

            // if prime found â†’ print and stop
            if (prime && num > 1) {
                System.out.println(num);
                break;
            }

            num++;
        }
    }
}
